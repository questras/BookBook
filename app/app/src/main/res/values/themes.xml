<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookBook" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <!-- Welcome pages theme. -->
    <style name="Theme.WelcomeTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="backgroundTint">@color/primary_variant</item>
    </style>

    <style name="SignInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">4dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="strokeWidth">4dp</item>
    </style>
    
    <style name="SignUpInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_margin">10dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/primary_dark</item>
    </style>
</resources>